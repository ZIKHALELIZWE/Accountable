<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ScriptFragment">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.thando.accountable.fragments.viewmodels.ScriptViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/scriptCoordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.MaterialComponents.ActionBar">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/scriptCollapsingToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="@color/white"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:toolbarId="@id/scriptToolbar"
                app:collapsedTitleGravity="center">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/toolbar_cover_image"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:adjustViewBounds="true"
                        android:contentDescription="@null"
                        android:fitsSystemWindows="true"
                        android:scaleType="centerCrop"
                        android:src="@{viewModel.script.getUri(context)}"
                        app:layout_collapseMode="parallax"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <FrameLayout
                        android:id="@+id/toolbarScriptTimeContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:background="#ffffff"
                        app:layout_constraintBottom_toBottomOf="@id/toolbar_cover_image"
                        app:layout_constraintStart_toStartOf="parent">

                        <TextView
                            android:id="@+id/scriptTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="40sp"
                            android:textColor="@color/black"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </FrameLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/toolbarScriptDateContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="#FFFFFF"
                        app:layout_constraintBottom_toBottomOf="@id/toolbar_cover_image"
                        app:layout_constraintEnd_toEndOf="parent">

                        <TextView
                            android:id="@+id/scriptDayNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:paddingHorizontal="2dp"
                            android:textColor="@color/black"
                            android:textSize="40sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <!--                            android:text="@{viewModel.script.scriptDateTime.getDayNumStateFlow()}"-->

                        <TextView
                            android:id="@+id/scriptDayWord"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.script.scriptDateTime.getDayWordStateFlow(context)}"
                            android:textColor="@color/teal_700"
                            app:layout_constraintTop_toTopOf="@id/scriptDayNum"
                            app:layout_constraintStart_toEndOf="@id/scriptDayNum"/>

                        <TextView
                            android:id="@+id/scriptMonthYear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.script.scriptDateTime.getMonthYearStateFlow(context)}"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toEndOf="@id/scriptDayNum"
                            app:layout_constraintBottom_toBottomOf="@id/scriptDayNum"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/scriptHeadingCardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00C7C7C7"
                        app:layout_collapseMode="parallax"
                        android:foregroundGravity="center|center_horizontal"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="30dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/toolbar_cover_image">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/titleConstraintLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="28dp"
                            android:layout_marginEnd="8dp"
                            android:gravity="center"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/toolbar_cover_image">

                            <EditText
                                android:id="@+id/titleEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:autoSizeTextType="uniform"
                                android:autofillHints="@null"
                                android:ellipsize="none"
                                android:ems="10"
                                android:visibility="@{viewModel.isEditingScript?View.VISIBLE:View.INVISIBLE}"
                                android:enabled="@{viewModel.script != null}"
                                android:hint="@string/enter_script_title"
                                android:inputType="textMultiLine|textCapSentences|textAutoCorrect|textEnableTextConversionSuggestions"
                                android:textAlignment="center"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent" />

                            <TextView
                                android:id="@+id/titleTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autoSizeTextType="uniform"
                                android:visibility="@{viewModel.isEditingScript?View.INVISIBLE:View.VISIBLE}"
                                android:hint="@string/enter_script_title"
                                android:gravity="center"
                                android:ellipsize="none"
                                android:textColor="@color/black"
                                android:textIsSelectable="true"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"  />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/scriptToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:theme="@style/ThemeOverlay.MaterialComponents.ActionBar"
                    app:layout_collapseMode="pin"/>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/script_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:enabled="@{viewModel.script != null}"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>