<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="task"
            type="com.thando.accountable.database.tables.Content" />
        <variable
            name="contentItemAdapter"
            type="com.thando.accountable.recyclerviewadapters.ContentItemAdapter" />
        <variable
            name="documentItemViewHolder"
            type="com.thando.accountable.recyclerviewadapters.ContentItemAdapter.DocumentItemViewHolder" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="0dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/document_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginHorizontal="6dp"
            android:layout_marginVertical="4dp"
            app:cardElevation="30dp"
            app:contentPadding="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp">

                <TextView
                    android:id="@+id/document_description_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:visibility="@{contentItemAdapter.isEditingScript?View.GONE:View.VISIBLE}"
                    android:textColor="@{documentItemViewHolder.teleprompterSettings.textColour??@color/black}"
                    android:textAlignment="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <EditText
                    android:id="@+id/document_description_editText"
                    android:visibility="@{contentItemAdapter.isEditingScript?View.VISIBLE:View.GONE}"
                    android:onFocusChange="@{documentItemViewHolder.editTextListener}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:gravity="center"
                    android:autoSizeTextType="uniform"
                    android:autofillHints="@null"
                    android:ellipsize="none"
                    android:background="@null"
                    android:ems="10"
                    android:hint="@string/edit_script"
                    android:inputType="textMultiLine|textCapSentences|textAutoCorrect|textEnableTextConversionSuggestions"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/document_description_textView"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:visibility="@{contentItemAdapter.isEditingScript?View.VISIBLE:task.description.text.length()==0?View.GONE:View.VISIBLE}"
            android:layout_marginHorizontal="6dp"
            android:layout_marginVertical="4dp"
            app:cardElevation="30dp"
            app:contentPadding="1dp"
            app:layout_constraintTop_toBottomOf="@id/document_card_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:visibility="@{contentItemAdapter.isEditingScript?View.GONE:View.VISIBLE}"
                    android:textColor="@{documentItemViewHolder.teleprompterSettings.textColour??@color/black}"
                    android:textAlignment="textStart"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@{task.spannedString.spannableStringBuilder}"/>

                <EditText
                    android:id="@+id/editText"
                    android:visibility="@{contentItemAdapter.isEditingScript?View.VISIBLE:View.GONE}"
                    android:onFocusChange="@{documentItemViewHolder.editTextListener}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:gravity="start"
                    android:autoSizeTextType="uniform"
                    android:autofillHints="@null"
                    android:ellipsize="none"
                    android:background="@null"
                    android:ems="10"
                    android:hint="@string/document_description"
                    android:inputType="textMultiLine|textCapSentences|textAutoCorrect|textEnableTextConversionSuggestions"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
