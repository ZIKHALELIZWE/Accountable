<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="task"
            type="com.thando.accountable.database.tables.Content" />
        <variable
            name="contentItemAdapter"
            type="com.thando.accountable.recyclerviewadapters.ContentItemAdapter" />
        <variable
            name="audioItemViewHolder"
            type="com.thando.accountable.recyclerviewadapters.ContentItemAdapter.AudioItemViewHolder" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/displayConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.media3.ui.PlayerView
                android:id="@+id/player_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                app:surface_type="none"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/audio_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/audio_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginHorizontal="6dp"
            android:layout_marginVertical="4dp"
            app:cardBackgroundColor="@color/purple_500"
            app:cardElevation="30dp"
            app:contentPadding="1dp"
            app:layout_constraintTop_toBottomOf="@id/displayConstraintLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp">

                <ImageButton
                    android:id="@+id/play_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/play_button"
                    android:onClick="@{() -> audioItemViewHolder.playOrClose()}"
                    android:background="@null"
                    android:src="@drawable/arrow_play"
                    android:layout_margin="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/audio_length_textview"
                    app:layout_constraintStart_toStartOf="@id/audio_length_textview"
                    app:layout_constraintEnd_toEndOf="@id/audio_length_textview"/>

                <TextView
                    android:id="@+id/audio_length_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="2dp"
                    android:textColor="@{audioItemViewHolder.teleprompterSettings.textColour??@color/black}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/audio_album"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="2dp"
                    android:visibility="@{task.filename.text.length()!=0?View.GONE:View.VISIBLE}"
                    android:text='@{@string/album(task.trackItem.album)}'
                    android:textColor="@{audioItemViewHolder.teleprompterSettings.textColour??@color/black}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/audio_name_textView"
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:textSize="@{audioItemViewHolder.teleprompterSettings.textSize??contentItemAdapter.appSettings.textSize}"
                    android:text='@{task.filename.text.toString().length()!=0?task.filename:task.trackItem.title + " : " + task.trackItem.artistName}'
                    android:visibility="@{contentItemAdapter.isEditingScript?View.GONE:View.VISIBLE}"
                    android:textColor="@{audioItemViewHolder.teleprompterSettings.textColour??@color/black}"
                    android:textAlignment="center"
                    app:layout_constraintStart_toEndOf="@id/play_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/audio_album"/>

                <EditText
                    android:id="@+id/audio_name_editText"
                    android:visibility="@{contentItemAdapter.isEditingScript?View.VISIBLE:View.GONE}"
                    android:textSize="@{audioItemViewHolder.teleprompterSettings.textSize??(contentItemAdapter.appSettings.textSize+40)}"
                    android:onFocusChange="@{audioItemViewHolder.editTextListener}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:minHeight="48dp"
                    android:gravity="center"
                    android:autoSizeTextType="uniform"
                    android:autofillHints="@null"
                    android:ellipsize="none"
                    android:background="@null"
                    android:ems="10"
                    android:hint="@string/audio_name"
                    android:inputType="textMultiLine|textCapSentences|textAutoCorrect|textEnableTextConversionSuggestions"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toEndOf="@id/play_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/audio_album"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:visibility="@{contentItemAdapter.isEditingScript?View.VISIBLE:task.description.text.toString().length()==0?View.GONE:View.VISIBLE}"
            android:layout_marginHorizontal="6dp"
            android:layout_marginVertical="4dp"
            app:cardElevation="30dp"
            app:contentPadding="1dp"
            app:layout_constraintTop_toBottomOf="@id/audio_card_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:textSize="@{audioItemViewHolder.teleprompterSettings.textSize??(contentItemAdapter.appSettings.textSize+40)}"
                    android:visibility="@{contentItemAdapter.isEditingScript?View.GONE:View.VISIBLE}"
                    android:textColor="@{audioItemViewHolder.teleprompterSettings.textColour??@color/black}"
                    android:textAlignment="textStart"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@{task.spannedString.spannableStringBuilder}"/>

                <EditText
                    android:id="@+id/editText"
                    android:visibility="@{contentItemAdapter.isEditingScript?View.VISIBLE:View.GONE}"
                    android:textSize="@{audioItemViewHolder.teleprompterSettings.textSize??(contentItemAdapter.appSettings.textSize+40)}"
                    android:onFocusChange="@{audioItemViewHolder.editTextListener}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:gravity="start"
                    android:autoSizeTextType="uniform"
                    android:autofillHints="@null"
                    android:ellipsize="none"
                    android:background="@null"
                    android:ems="10"
                    android:hint="@string/audio_description"
                    android:inputType="textMultiLine|textCapSentences|textAutoCorrect|textEnableTextConversionSuggestions"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
