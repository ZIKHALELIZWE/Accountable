<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.MarkupLanguageFragment">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.thando.accountable.fragments.viewmodels.MarkupLanguageViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/markupLanguageCoordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.MaterialComponents.ActionBar">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/markupLanguageCollapsingToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="@color/white"
                app:title="@{viewModel.getToolbarTitle(viewModel.addition,context)}"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:toolbarId="@id/markupLanguageToolbar"
                app:collapsedTitleGravity="center">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Spinner
                        android:id="@+id/markupLanguageSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="26sp"
                        android:enabled="@{(viewModel.markupLanguagesList.size()!=0)?true:false}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/changeLanguageNameButton"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:text="@string/change_name"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="5dp"
                        android:minHeight="?android:actionBarSize"
                        android:backgroundTint="?attr/colorPrimaryDark"
                        android:onClick="@{() -> viewModel.changeLanguageName()}"
                        app:layout_constraintEnd_toStartOf="@id/clearLanguageButton"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/markupLanguageSpinner"
                        app:layout_constraintBottom_toBottomOf="@id/clearLanguageButton"/>

                    <Button
                        android:id="@+id/clearLanguageButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.deleteButtonText}"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="5dp"
                        android:minHeight="?android:actionBarSize"
                        android:backgroundTint="?attr/colorPrimaryDark"
                        android:onClick="@{() -> viewModel.clearLanguage()}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/changeLanguageNameButton"
                        app:layout_constraintTop_toBottomOf="@id/markupLanguageSpinner" />

                    <TextView
                        android:id="@+id/opening_closing_character_example_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@{viewModel.openingClosingExampleSpannedString.spannableStringBuilder}"
                        android:textColor="@color/black"
                        android:textSize="26sp"
                        app:layout_constraintTop_toBottomOf="@id/clearLanguageButton"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/opening_character_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/opening"
                        android:textColor="@color/black"
                        android:textSize="26sp"
                        app:layout_constraintEnd_toStartOf="@+id/opening_character_edit_view"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintBottom_toTopOf="@id/opening_closing_barrier"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/opening_closing_character_example_textview" />

                    <EditText
                        android:id="@+id/opening_character_edit_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autofillHints="@null"
                        android:hint="@null"
                        android:inputType="text"
                        android:maxLength="10"
                        android:minWidth="60dp"
                        android:minHeight="48dp"
                        android:text="@={viewModel.markupLanguage.opening}"
                        android:textColor="@color/black"
                        android:textSize="26sp"
                        app:layout_constraintEnd_toStartOf="@+id/closing_character_textview"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintBottom_toTopOf="@id/opening_closing_barrier"
                        app:layout_constraintStart_toEndOf="@+id/opening_character_textview"
                        app:layout_constraintTop_toBottomOf="@id/opening_closing_character_example_textview" />

                    <TextView
                        android:id="@+id/closing_character_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/closing"
                        android:textColor="@color/black"
                        android:textSize="26sp"
                        app:layout_constraintEnd_toStartOf="@+id/closing_character_edit_view"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintBottom_toTopOf="@id/opening_closing_barrier"
                        app:layout_constraintStart_toEndOf="@+id/opening_character_edit_view"
                        app:layout_constraintTop_toBottomOf="@id/opening_closing_character_example_textview" />

                    <EditText
                        android:id="@+id/closing_character_edit_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autofillHints="@null"
                        android:hint="@null"
                        android:inputType="text"
                        android:maxLength="10"
                        android:minWidth="60dp"
                        android:minHeight="48dp"
                        android:text="@={viewModel.markupLanguage.closing}"
                        android:textColor="@color/black"
                        android:textSize="26sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintBottom_toTopOf="@id/opening_closing_barrier"
                        app:layout_constraintStart_toEndOf="@+id/closing_character_textview"
                        app:layout_constraintTop_toBottomOf="@id/opening_closing_character_example_textview" />

                    <androidx.constraintlayout.widget.Barrier
                        android:id="@+id/opening_closing_barrier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="@{viewModel.getVisibility(viewModel.markupLanguage.opening,viewModel.markupLanguage.closing)}"
                        app:barrierDirection="bottom"
                        app:constraint_referenced_ids="opening_character_textview,opening_character_edit_view,closing_character_textview,closing_character_edit_view" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/markupLanguageToolbar"
                    android:visibility="@{viewModel.getToolbarVisibility(viewModel.addition)}"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:theme="@style/ThemeOverlay.MaterialComponents.ActionBar"
                    app:layout_collapseMode="pin"/>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/spans_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:enabled="@{(viewModel.markupLanguage!=null)?true:false}"
            android:visibility="@{viewModel.getVisibility(viewModel.markupLanguage.opening,viewModel.markupLanguage.closing)}"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>