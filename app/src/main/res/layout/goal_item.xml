<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="task"
            type="com.thando.accountable.database.tables.Goal" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/GoalWidgetCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#00C4C0C0"
        app:cardCornerRadius="0dp"
        android:layout_marginHorizontal="2dp"
        android:layout_marginVertical="4dp"
        app:cardElevation="30dp"
        app:contentPadding="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:gravity="center"
            android:isScrollContainer="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/GWImage"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_marginTop="0dp"
                android:contentDescription="@string/goal_image"
                android:scaleType="centerCrop"
                android:visibility="@{(task.getUri(context)!=null)?View.VISIBLE:View.INVISIBLE}"
                android:src="@{task.getUri(context)}"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/GWGoal"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|clip_vertical"
                    android:isScrollContainer="true"
                    android:paddingVertical="5dp"
                    android:paddingBottom="20dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/goalWidgetGoalSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/GoalWidget4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/GWGoal"
                    android:visibility="gone"
                    android:textSize="20sp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:baselineAligned="false">

                <LinearLayout
                    android:id="@+id/goalWidgetLL1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/DaysTillEnd"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/CompletionDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{task.dateOfCompletion.getFullDateStateFlow(context)}"
                        android:textColor="@color/GoalWidget4"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/goalWidgetLL2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/goalWidgetDaysLeftHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/DaysLeft"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/DaysLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{task.dateOfCompletion.getDaysFromTodayStateFlow(context)}"
                        android:textColor="@color/GoalWidget4"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Question2"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/GWWhy"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/GoalWidget4"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Question3"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/GWSuccess"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:textAlignment="center"
                    android:textColor="@color/GoalWidget4"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</layout>