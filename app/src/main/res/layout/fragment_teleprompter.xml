<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.TeleprompterFragment">

    <data>
        <import type="android.view.View"/>
        <import type="android.graphics.Color"/>
        <variable
            name="viewModel"
            type="com.thando.accountable.fragments.viewmodels.TeleprompterViewModel" />
        <variable
            name="rootConstraintLayoutHeight"
            type="Integer" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rootConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/teleprompterCoordinatorLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/content_sheet">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:theme="@style/ThemeOverlay.MaterialComponents.ActionBar">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/teleprompterCollapsingToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:contentScrim="@color/white"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed"
                    app:collapsedTitleGravity="center">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/toolbar_cover_image"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:adjustViewBounds="true"
                            android:contentDescription="@null"
                            android:fitsSystemWindows="true"
                            android:src="@{viewModel.script.getUri(context)}"
                            android:visibility="@{(viewModel.script.getUri(context)!=null)?View.VISIBLE:View.INVISIBLE}"
                            android:scaleType="centerCrop"
                            app:layout_collapseMode="parallax"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/teleprompterHeadingCardView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_collapseMode="parallax"
                            android:foregroundGravity="center|center_horizontal"
                            app:cardCornerRadius="0dp"
                            app:cardElevation="30dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/toolbar_cover_image">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/titleConstraintLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="10dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="28dp"
                                android:layout_marginEnd="8dp"
                                android:gravity="center"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/toolbar_cover_image">

                                <TextView
                                    android:id="@+id/titleTextView"
                                    android:text="@{viewModel.scriptTitle}"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:autoSizeTextType="uniform"
                                    android:gravity="center"
                                    android:ellipsize="none"
                                    android:textColor="@color/black"
                                    android:textIsSelectable="true"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"  />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.appbar.CollapsingToolbarLayout>
            </com.google.android.material.appbar.AppBarLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/teleprompter_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <Button
            android:id="@+id/countDownButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/count_down_display_button"
            app:layout_constraintStart_toStartOf="@id/teleprompterCoordinatorLayout"
            app:layout_constraintTop_toTopOf="@id/teleprompterCoordinatorLayout"
            android:onClick="@{() -> viewModel.finishCountDown()}"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageButton
                android:id="@+id/content_sheet_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:contentDescription="@string/expand_retract_bottom_sheet"
                android:minHeight="?android:actionBarSize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedScrollView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingBottom="16dp"
                app:layout_constraintTop_toBottomOf="@id/content_sheet_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/nestedScrollViewConstraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/buttons_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageButton
                            android:id="@+id/skip_back_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="?attr/colorPrimary"
                            android:contentDescription="@string/skip_back"
                            android:minHeight="?android:actionBarSize"
                            android:src="@android:drawable/ic_media_previous" />

                        <ImageButton
                            android:id="@+id/play_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="?attr/colorPrimary"
                            android:contentDescription="@string/play_pause"
                            android:minHeight="?android:actionBarSize"
                            android:onClick="@{()->viewModel.playPause()}"
                            android:src="@{viewModel.isPlaying()?@android:drawable/ic_media_pause:@android:drawable/ic_media_play}" />

                        <ImageButton
                            android:id="@+id/skip_forward_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="?attr/colorPrimary"
                            android:contentDescription="@string/skip_forward"
                            android:minHeight="?android:actionBarSize"
                            android:src="@android:drawable/ic_media_next" />
                    </LinearLayout>

                    <Spinner
                        android:id="@+id/teleprompterSettingsSpinner"
                        android:enabled="@{viewModel.teleprompterSettingsList.size()!=0}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="26sp"
                        android:layout_marginVertical="5dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/buttons_container"/>

                    <Button
                        android:id="@+id/changeSettingsNameButton"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:text="@string/change_name"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="5dp"
                        android:minHeight="?android:actionBarSize"
                        android:onClick="@{() -> viewModel.changeTeleprompterSettingsName()}"
                        app:layout_constraintEnd_toStartOf="@id/restoreToDefaultSettingsButton"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/teleprompterSettingsSpinner"
                        app:layout_constraintBottom_toBottomOf="@id/restoreToDefaultSettingsButton"/>

                    <Button
                        android:id="@+id/restoreToDefaultSettingsButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="5dp"
                        android:minHeight="?android:actionBarSize"
                        android:onClick="@{() -> viewModel.restoreToDefaultTeleprompterSettings()}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/changeSettingsNameButton"
                        app:layout_constraintTop_toBottomOf="@id/teleprompterSettingsSpinner" />

                    <TextView
                        android:id="@+id/textSizeSeekBarValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{@string/text_size(String.valueOf(viewModel.teleprompterSettings.textSize))}"
                        android:layout_marginTop="16dp"
                        android:textSize="18sp"
                        android:gravity="start"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/restoreToDefaultSettingsButton" />

                    <SeekBar
                        android:id="@+id/textSizeSeekBar"
                        style="@style/Widget.AppCompat.SeekBar.Discrete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="120"
                        android:min="30"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textSizeSeekBarValue" />

                    <TextView
                        android:id="@+id/scrollSpeedSeekBarValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{@string/scroll_speed(String.valueOf(viewModel.teleprompterSettings.scrollSpeed))}"
                        android:layout_marginTop="16dp"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textSizeSeekBar" />

                    <SeekBar
                        android:id="@+id/scrollSpeedSeekBar"
                        style="@style/Widget.AppCompat.SeekBar.Discrete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="20"
                        android:min="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/scrollSpeedSeekBarValue" />

                    <Button
                        android:id="@+id/textColourButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:minHeight="?android:actionBarSize"
                        android:text="@{@string/text_colour(String.valueOf(viewModel.teleprompterSettings.textColour))}"
                        android:onClick="@{() -> viewModel.chooseTextColour(context)}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/scrollSpeedSeekBar" />

                    <Button
                        android:id="@+id/backgroundColourButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:minHeight="?android:actionBarSize"
                        android:text="@{@string/background_colour(String.valueOf(viewModel.teleprompterSettings.backgroundColour))}"
                        android:onClick="@{() -> viewModel.chooseBackgroundColour(context)}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textColourButton" />

                    <Button
                        android:id="@+id/controlsPositionButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:minHeight="?android:actionBarSize"
                        android:onClick="@{() -> viewModel.toggleControlsPosition()}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/backgroundColourButton" />

                    <TextView
                        android:id="@+id/startCountDownSeekBarValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{@string/start_count_down(String.valueOf(viewModel.teleprompterSettings.startCountDown))}"
                        android:layout_marginTop="16dp"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/controlsPositionButton" />

                    <SeekBar
                        android:id="@+id/startCountDownSeekBar"
                        style="@style/Widget.AppCompat.SeekBar.Discrete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="10"
                        android:min="0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/startCountDownSeekBarValue" />

                    <TextView
                        android:id="@+id/scrollCountDownSeekBarValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{@string/scroll_count_down(String.valueOf(viewModel.teleprompterSettings.scrollCountDown))}"
                        android:layout_marginTop="16dp"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/startCountDownSeekBar" />

                    <SeekBar
                        android:id="@+id/scrollCountDownSeekBar"
                        style="@style/Widget.AppCompat.SeekBar.Discrete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="10"
                        android:min="0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/scrollCountDownSeekBarValue" />

                    <TextView
                        android:id="@+id/skipSizeSeekBarValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{@string/skip_size(String.valueOf(viewModel.teleprompterSettings.skipSize))}"
                        android:layout_marginTop="16dp"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/scrollCountDownSeekBar" />

                    <SeekBar
                        android:id="@+id/skipSizeSeekBar"
                        style="@style/Widget.AppCompat.SeekBar.Discrete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="@{rootConstraintLayoutHeight}"
                        android:min="@{rootConstraintLayoutHeight/3}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/skipSizeSeekBarValue" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/special_characters_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/skipSizeSeekBar"/>

                    <Button
                        android:id="@+id/add_special_character_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/add_special_character"
                        android:onClick="@{() -> viewModel.addSpecialCharacter()}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/special_characters_recycler_view"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
